<body>

    <%- include("../../template/header.ejs") %>

    <%- include("../../template/sidebar.ejs") %>
    <main id="main" class="main">
        <form  action="/questions_store" method="post">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Select Subject</label>
            <select class="custom-select my-1 mr-sm-2" name="select_subject" id="inlineFormCustomSelectPref">
              <option selected>Choose...</option>
              <%for(let exam of exams) { %>
              <option value="<%=exam.exam_name %>"><%=exam.exam_name %></option>
              <% } %>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label for="inputAddress">Name Of Question</label>
          <textarea name="question_name" id="input" class="form-control" rows="3" required="required"></textarea>
        </div>
        
         <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputEmail4">Option 1</label>
            <input type="text" class="form-control" name="option_1" id="inputEmail4">
          </div>
        

          <div class="form-group col-md-6">
            <label for="inputEmail4">Option 2</label>
            <input type="text" class="form-control" name="option_2" id="inputEmail4" >
          </div>
        
          <div class="form-group col-md-6">
            <label for="inputEmail4">Option 3</label>
            <input type="text" class="form-control" name="option_3" id="inputEmail4">
          </div>
       
        
          <div class="form-group col-md-6">
            <label for="inputEmail4">Option 4</label>
            <input type="text" class="form-control" name="option_4" id="inputEmail4" >
          </div>
        </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Correct Option</label>
              <select class="custom-select my-1 mr-sm-2" name="correct_option" id="inlineFormCustomSelectPref">
                <option selected="">Choose...</option>
                <option value="option_1">Option 1</option>
                <option value="option_2">Option 2</option>
                <option value="option_3">Option 3</option>
                <option value="option_4">Option 4</option>
                
              </select>
            </div>
          </div>

          <button type="submit" class="btn btn-dark">Submit</button>
      </form>
    </main>


