</head>
<body>
    <%- include("../../template/header.ejs") %>

    <%- include("../../template/sidebar.ejs") %>

    

    <main id="main" class="main">

      <div class="card">
      <h5 class="card-header">Search By Exam Name</h5>
      <form action="/search_exam" method="get">
        <div class="card-body">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Select Subject</label>
              <select class="custom-select my-1 mr-sm-2" name="select_subject" id="inlineFormCustomSelectPref">
                <option value="" selected>View All</option>
                <%for(let exam of exams) { %>
                <option value="<%=exam.exam_name %>"><%=exam.exam_name %></option>
                <% } %>
              </select>
            </div>
          </div>
          <input type="submit" value="Submit"  class="btn btn-primary"/>
        </div>
      </form>
      </div>


        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Subject Name</th>
                <th scope="col">Question</th>
                <th scope="col">Answer</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% let i=1 %>
              <% for(const questions of questions_data) { %>
            <tr>
              <th scope="row"><%= i++ %></th>
              <td><%= questions.select_subject %></td>
              <td><%= questions.question_name %></td>
              <td><%= questions[questions.correct_option] %></td>
              <td><a href="/edit_question?id=<%= questions._id %>" class="btn btn-info">Edit</a>
                  <a href="/question_delete/<%= questions._id %>" class="btn btn-danger">Delete</a>
              </td>
            </tr>
            <% } %>
          </tbody>
          </table>        
         
    </main>


    <%- include("../../template/footer.ejs") %>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

